@using JIC.Crime.View.Models
@model vw_UserChangePassword

@{
    ViewBag.Title = "تغيير كلمة المرور";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>تغيير كلمة المرور</h2>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <section id="loginForm">
            @using (Html.BeginForm("ChangePassword", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.CPasswordFor(m => m.Password)
                @Html.CPasswordFor(m => m.ConfirmPassword)
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="تغيير كلمة المرور" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

