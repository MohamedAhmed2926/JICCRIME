@using JIC.Crime.View.Models
@model LawyerCreateViewModel
@if (ViewData["SessionEnded"] != null && (bool)ViewData["SessionEnded"])
{
    <script>
        debugger;
        window.location.href = "/User/Login?returnUrl=/";
    </script>
}



    <div id="Editdiv">
        @using (Ajax.BeginForm("Edit", new { id = Model.LawyerModel.ID }, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "Editdiv" }, new { enctype = "multipart/form-data", id = "fileDataa" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.LawyerModel.ID)
            <div class="row">
                <div class="col-sm-3">
                    @Html.CTextBoxFor(m => m.LawyerModel.LawyerName)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    @Html.CDropDownFor(m => m.LawyerModel.LawyerLevelID, new SelectList(Model.ListLawyerLevelModel, "ID", "Name"), true)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    @Html.CTextBoxFor(m => m.LawyerModel.LawyerCardNumber)
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3">
                    @Html.CTextBoxFor(m => m.LawyerModel.NationalID)
                    <span id="NationalID" style="color:black" class="hidden"> الرقم القومي غير صحيح </span>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3">
                    @Html.CTextBoxFor(m => m.LawyerModel.Address)
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3">
                    @Html.CTextBoxFor(m => m.LawyerModel.DateOfBirth, "", true)
                    @* @Html.CTextBoxFor(m => m.LawyerModel.DateOfBirth) *@
                </div>
            </div>
            @Html.HiddenFor(m => m.LawyerModel.PersonID)

            @Html.HiddenFor(m => m.LawyerModel.LawyerFileData)


            <div class="col-xs-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">تعديل صورة كارنية النقابة </div>
                    <div class="panel-body">
                        <div class="progress">
                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40"
                                 aria-valuemin="0" aria-valuemax="100" id="uploadProgressBar"></div>
                        </div>
                        <div class="row" style="padding-bottom:10px;">
                            <div class="col-sm-12">
                                <div class="text-right">

                                    <span class="btn btn-success fileinput-button">
                                        <i class="glyphicon glyphicon-plus"></i>
                                        @*<span>تعديل صورة كارنية النقابة </span>*@
                                        @Html.CTextBoxFor(model => model.LawyerModel.LawyerFile, new { Type = "file" })
                                        @*<input type="file" id="file" name="file" />*@
                                    </span>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>


            </div>



            <div class="row">
                <div class="col-sm-1">
                    <input type="submit" value="@JIC.Base.Resources.Resources.Save" id="Edit" class="btn btn-default" name="action:Edit" />
                </div>
                <div class="col-sm-3" y>
                    @*// @Html.ActionLink("JIC.Base.Resources.Resources.Cancel", "Index", new { @class = "btn btn-default", @style = "background-color:maroon;color:white;border-radius:4px;" })*@
                    @*  <input type="submit" value="@JIC.Base.Resources.Resources.Cancel" name="action:CancelEdit" id="Cancel" class="btn btn-default"  formaction="CancelEdit" />*@
                    <button type="button" class="btn btn-default" data-dismiss="modal">@JIC.Base.Resources.Resources.Cancel</button>
                </div>
            </div>
        }
    </div>

<script type="text/javascript">

        OnDocReady(function () {



            $("#@Html.IdFor(m => m.LawyerModel.NationalID)").on('change', function () {
                      var NatNoo = $("#@Html.IdFor(m => m.LawyerModel.NationalID)").val();
                     //debugger;
                if ($(this).val().length == 14 || ($(this).val().length > 0 && ($(this).val().length < 14))) {

                    $.ajax(
                        {
                            url: '/Lawyer/GetValidationNatNo',
                            type: "GET",
                            dataType: "JSON",
                            data: { NatNo: NatNoo },
                            contentType: 'application/json; charset=utf-8',
                            success: function (validation) {
                                if (validation == false) {
                                    // debugger;
                                    $("#NationalID").removeClass("hidden")



                                }
                            }

                        });





                }
            });

            $('#LawyerModel_LawyerFile').fileupload({
                
            @* dataType: 'json',
                url: '/@Url.Content("Handler/UploadHandler.ashx")',*@

            //done: function (e, data) {
            //    var UploadFileData = GetUploadFiles(data.result.id);
            //    UploadFileData['file'] = data.result;
            //    UploadIfReady(data.result.id);
            //    }
         
        }).on('fileuploadprogress', function (e, data) {
                console.log(data._progress);
                var progress = (data._progress.loaded / data._progress.total) * 100;
                $("#uploadProgressBar").prop('aria-valuenow', progress);
                $("#uploadProgressBar").width(progress + '%');
            });

        });






</script>
