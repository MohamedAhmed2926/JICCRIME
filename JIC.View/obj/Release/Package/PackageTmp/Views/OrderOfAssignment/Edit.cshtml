@using JIC.Crime.View.Models
@model  OrderOfAssignmentViewModels

@{
    ViewBag.Title = JIC.Base.Resources.Resources.OrderDescription;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .Text-Area {
        height: 420px;
        width: 650px;
    }
</style>
<div class="col-xs-3">
    @if (Model.Description=="")
    {
        @Html.Partial("PVCaseStep", new CaseViewModel { CaseID = Model.CaseID, caseStatus = JIC.Base.CaseStatus.OrderOfAssigment, PageMode = JIC.Base.PageMode.Edit })
    }
    else
    {
        @Html.Partial("PVCaseStep", new CaseViewModel { CaseID = Model.CaseID, caseStatus = JIC.Base.CaseStatus.OrderOfAssigment, PageMode = JIC.Base.PageMode.Edit, statusCheck = JIC.Base.StatusCheck.OrderOFAssignmentExist })

    }
</div>
<div class="col-xs-9">
    <div class="panel panel-primary">
        <div class="panel-heading">
            @JIC.Base.Resources.Resources.OrderDescription
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Edit", "OrderOfAssignment", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.CaseID)
                <div class="row">
                    <div class="col-lg-12">
                        @Html.TextAreaFor(m => m.Description, new { @class = "Text-Area" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <input type="submit" value="@JIC.Base.Resources.Resources.Save" id="ADD" class="btn btn-default" />
                    </div>
                    <div class="col-sm-4">
                        <a href='@Url.Action("Edit", "OrderOfAssignment",new {id=Model.CaseID })'>
                            <input type='button' value='@JIC.Base.Resources.Resources.Cancel' class="btn btn-default"  />
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
