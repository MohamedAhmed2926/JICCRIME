@model JIC.Crime.View.Models.vw_UserDataModel

<div id="Userdiv">
    @MyHelpers.ShowMessage(ViewBag.Messages)

    @if (ViewBag.OperationSuccess != null && ((bool)ViewBag.OperationSuccess) == true)
    {
        @Html.SuccessMessage(JIC.Base.Resources.Messages.OperationCompletedSuccessfully);
        <script>
            $(document).trigger("User:DeleteSuccefull");
        </script>
    }
    @using (Ajax.BeginForm("Lock", new { id = Model.ID }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "Userdiv", InsertionMode = InsertionMode.Replace }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="panel panel-primary">
            <div class="panel-heading">
                تعطيل المستخدم
            </div>
            <div class="panel-body">
                هل انت متاكد انك تريد تعطيل المستخدم
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">إلغاء</button>
                <input type="submit" class="btn btn-danger btn-ok" value="تعطيل" />
            </div>
        </div>
    }


</div>



