@using JIC.Crime.View.Models
@model WorkingDaysViewModels
<div id="CourtConfigurationDiv">
    @using (Ajax.BeginForm("Create", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "CourtConfigurationDiv" }))
    {
       

        @Html.AntiForgeryToken()
        <h4>من فضلك، قم بإختيار العطلات الاسبوعية</h4>
        <hr />
        @Html.CCheckBox(m => m.IsSaturdaySelected, "السبت");
        @Html.CCheckBox(m => m.IsSundaySelected, "الحد");
        @Html.CCheckBox(m => m.IsMondaySelected, "الأثنين");
        @Html.CCheckBox(m => m.IsTuesdaySelected, "الثلاثاء");
        @Html.CCheckBox(m => m.IsWednesdaySelected, "الأربعاء");
        @Html.CCheckBox(m => m.IsThursdaySelected, "الخميس");
        @Html.CCheckBox(m => m.IsFridaySelected, "الجمعة", new { @checked = "checked" });
        <div class="form-group">
            <div class="col-xs-4">
                <input type="submit" class="btn btn-default" value="@JIC.Base.Resources.Resources.Save" />
            </div>
            <div class="col-xs-4">
                <input type="reset" class="btn btn-default" value="@JIC.Base.Resources.Resources.Cancel" onclick="Update()" />
            </div>
        </div>
    }
</div>