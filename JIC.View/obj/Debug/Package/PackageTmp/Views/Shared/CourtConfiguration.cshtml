@using JIC.Crime.View.Models
@model CourtConfigurationViewModel


 @if (!User.IsInRole(JIC.Base.SystemUserTypes.JICAdmin.ToString()))
 {
    @Html.Partial("TabsHelper", new List<TabsViewModel>
    {
    new TabsViewModel { Name = "تحديد العطلات الأسبوعية", Url = Url.Action("Create","WorkingDays") , IsActive = Model.CourtConfigurationMode == CourtConfiguration.VacationDaysMode },

    new TabsViewModel { Name = "تعريف الأجازات الرسمية", Url = Url.Action("Index", "Vacations"), IsActive = Model.CourtConfigurationMode == CourtConfiguration.VacationDatesMode },

    new TabsViewModel { Name = "تحديد ايام الأدوار الشهرية و فواصل الأنعقاد", Url = Url.Action("Index","CyclesDistribution"), IsActive = Model.CourtConfigurationMode == CourtConfiguration.CyceDistributionMode }
    })

 }
 else
 {
    @Html.Partial("TabsHelper", new List<TabsViewModel>
    {
    new TabsViewModel { Name = "تحديد العطلات الأسبوعية", Url = Url.Action("Create","WorkingDays") , IsActive = Model.CourtConfigurationMode == CourtConfiguration.VacationDaysMode },
    new TabsViewModel { Name = "تحديد ايام الأدوار الشهرية و فواصل الأنعقاد", Url = Url.Action("Index","CyclesDistribution"), IsActive = Model.CourtConfigurationMode == CourtConfiguration.CyceDistributionMode }
    })
 }
