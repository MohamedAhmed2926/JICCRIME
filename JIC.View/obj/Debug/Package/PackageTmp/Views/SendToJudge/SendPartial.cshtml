@model JIC.Crime.View.Models.JudgeViewModel
@if (ViewData["SessionEnded"] != null && (bool)ViewData["SessionEnded"])
{
    <script>
        debugger;
        window.location.href = "/User/Login?returnUrl=/";
    </script>
}

@{
    ViewBag.Title = JIC.Base.Resources.PageTitles.SendToJudge;
    Layout = null;
}
<div class="row" id="SendID">

    <div class="col-xs-10">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@JIC.Base.Resources.PageTitles.SendToJudge</h3>
            </div>
            <div class="panel-body" style="padding-right:30px">
                @using (Ajax.BeginForm("SendPartial", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "SendID" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.SessionID)
                    @Html.HiddenFor(m => m.CaseID)

                    <div style="font-size:medium ;font-weight:200">@JIC.Base.Resources.Messages.SendToJudgeMsg</div>
                    <div class="col-xs-offset-4">
                        <input type="submit" class="btn btn-default" value="@JIC.Base.Resources.PageTitles.SendToJudge  " />
                    </div>
                }
            </div>

        </div>
    </div>
</div>

@*@using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()



    }*@

@if (ViewBag.Saved != null && (bool)ViewBag.Saved)
{
    <script>
        debugger;
        $(document).trigger('SendToJudge:Saved');
    </script>
}

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
}
