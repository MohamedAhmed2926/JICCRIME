
@using JIC.Crime.View.Models
@model JudgeViewModel

@{
    ViewBag.Title = JIC.Base.Resources.PageTitles.SendToJudge;
    Layout = null;
}

<div class="row">
  
</div>
<div class="row" id="SendID">

    <div class="col-xs-10">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@JIC.Base.Resources.PageTitles.SendToJudge</h3>
            </div>
            <div class="panel-body">
                @using (Ajax.BeginForm("Index", new AjaxOptions { HttpMethod = "Post" ,UpdateTargetId="SendID"}))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.SessionID)
                    @Html.HiddenFor(m => m.CaseID)

                    <h2>@JIC.Base.Resources.Messages.SendToJudgeMsg</h2>
                    <div class="col-xs-offset-4">
                        <input type="submit" class="btn btn-default" value="@JIC.Base.Resources.PageTitles.SendToJudge  " />
                    </div>
             }
            </div>

        </div>
    </div>
</div>
