@using JIC.Crime.View.Models
@model LoginViewModel
@{
    ViewBag.Title = "تسجيل الدخول";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>تسجيل الدخول</h2>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <section id="loginForm">
            @using (Html.BeginForm("Login","User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.CTextBoxFor(m=>m.UserName)
                @Html.CPasswordFor(m=>m.Password)
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="تسجيل الدخول" class="btn btn-default" />
                    </div>
                </div>
                @*<p>
                    @Html.ActionLink("Register as a new user", "Register")
                </p>*@
                @* Enable this once you have account confirmation enabled for password reset functionality
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>*@
            }
        </section>
    </div>
</div>
<script>
    $(document).on("User:CannotAccess", function () {
       $(document).trigger('ErrorMessage', 'لا يمكن تسجيل الدخول لأنه لم يتم تعيين هذا الحساب إلى دائرة حتى الآن');
    });
    
</script>
